#!/usr/bin/env ruby

begin
  require 'aura-print'
rescue LoadError
  require 'rubygems'
  require 'aura-print'
end

if ARGV[0] == "system"
  output = AuraPrint.systemPrint(ARGV[1])
  puts "System printing does not work outside of a RoR environment"
  puts output
elsif ARGV[0] == "web"
  output = AuraPrint.barcodeWeb(ARGV[1])
  puts output
else
  puts "Error, either run as 'aura-print system $sku' or 'aura-print web $sku'"
end
